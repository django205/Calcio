<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.examle.yogeshkumar.calcio.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#2200ffa1">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"

            android:layout_height="50dp"

            android:layout_above="@+id/l4"
            android:id="@+id/l3">
            <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/b1"

                android:layout_weight="1"
                android:textSize="32sp"
                android:background="@android:color/transparent"
                android:onClick="onclick1" />

            <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/b2"
                android:layout_weight="1"
                android:textSize="32sp"
                android:background="@android:color/transparent"
                android:onClick="onclick2" />

            <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/b3"
                android:layout_weight="1"
                android:textSize="32sp"
                android:background="@android:color/transparent"
                android:onClick="onclick3" />

            <Button
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/bequal"
                android:layout_weight="1"
                android:textSize="32sp"
                android:background="@android:color/holo_red_light"
                android:onClick="onclickequal" />

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="14dp"
        android:layout_alignParentBottom="true"

        android:id="@+id/l4">

        <Button
            android:text="%"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/bper"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="32sp"
            android:onClick="onclickper" />

        <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/b0"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:textSize="32sp"
            android:onClick="onclick0" />

        <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/bpoint"
            android:layout_weight="1"
            android:textSize="32sp"
            android:background="@android:color/transparent"
            android:onClick="onclickpoint" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/bequal2"
            android:layout_weight="1"
            android:textSize="32sp"
            android:background="@android:color/holo_red_light"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_above="@+id/l3"
        android:layout_alignParentEnd="true"
        android:id="@+id/l2">

        <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/b4"

            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:textSize="32sp"
            android:onClick="onclick4" />

        <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/b5"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:textSize="32sp"
            android:onClick="onclick5" />

        <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/b6"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:textSize="32sp"
            android:onClick="onclick6" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/bplus"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:textSize="32sp"
            android:onClick="onclickplus" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_above="@id/l2"
        android:layout_alignParentStart="true"
        android:id="@+id/l1"
        android:layout_height="50dp">

        <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/b7"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="32sp"
            android:onClick="onclick7" />

        <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/b8"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="32sp"
            android:onClick="onclick8" />

        <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/b9"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="32sp"
            android:onClick="onclick9" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/bsub"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="32sp"
            android:onClick="onclicksub" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:textSize="36sp"
        android:textAlignment="viewEnd"
        android:gravity="bottom"
        android:background="@android:color/transparent"
         />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_above="@id/l1"
        android:layout_alignParentEnd="true"
        android:id="@+id/l0"
        android:layout_height="50dp">

        <Button
            android:text="AC"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/bac"
            android:layout_weight="1"
            android:textSize="32sp"
            android:textColor="@android:color/holo_red_light"
            android:background="@android:color/transparent"
            android:onClick="onclickac" />

        <Button
            android:text="->"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/bback"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="32sp"
            android:onClick="onclickback" />

        <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/bdivide"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="32sp"
            android:onClick="onclickdivide" />

        <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/bmul"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="32sp"
            android:onClick="onclickmul" />
    </LinearLayout>

</RelativeLayout>
